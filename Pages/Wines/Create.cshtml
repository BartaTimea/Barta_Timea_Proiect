@page
@model Barta_Timea_Proiect.Pages.Wines.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Wine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Wine.Name" class="control-label"></label>
                <input asp-for="Wine.Name" class="form-control" />
                <span asp-validation-for="Wine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.Alcohol" class="control-label"></label>
                <input asp-for="Wine.Alcohol" class="form-control" />
                <span asp-validation-for="Wine.Alcohol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.Price" class="control-label"></label>
                <input asp-for="Wine.Price" class="form-control" />
                <span asp-validation-for="Wine.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.ProductionDate" class="control-label"></label>
                <input asp-for="Wine.ProductionDate" class="form-control" />
                <span asp-validation-for="Wine.ProductionDate" class="textdanger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Wine.BrandID" class="control-label">Brand Name</label>
                <select asp-for="Wine.BrandID" class="form-control" asp-items="ViewBag.BrandID">
                </select>
                <span asp-validation-for="Wine.BrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var ass in Model.AssignedAssortmentDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCourses"
                                               value="@ass.AssortmentID"
                                               @(Html.Raw(ass.Assigned ? "checked=\"checked\"" : "")) />
                                        @ass.AssortmentID @: @ass.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
